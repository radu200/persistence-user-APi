<div class="container">
    <h1 class="text-center ">{{title}}</h1>
    <form action="/user" method="POST" class="mb-4">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control">
        </div>
        <div class="form-group">
            <label for="name">GivenName</label>
            <input type="text" name="givenName" class="form-control">
        </div>
        <div class="form-group">
            <label for="name">FamilyName</label>
            <input type="text" name="familyName" class="form-control">
        </div>
        <input type="submit" value="Add User" class="btn btn-primary btn-block">
    </form>
    <h4>Users</h4>

    <div class="row ">
        {{#each users}}
        <div class="col-sm-12 col-md-4 col-lg-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{this.givenName}} {{this.familyName}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{this.created}}</h6>
                    <p class="card-text">{{this.email}}</p>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>

<a href="/users" class="btn btn-light mt-4">Visit API</a>